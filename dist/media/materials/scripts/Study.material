fragment_program MyFragmentShader1 cg
{
    source Ogre3DBeginnerGuideShaders.cg
    entry_point MyFragmentShader1
    profiles ps_1_1 arbfp1
}

vertex_program MyVertexShader1 cg
{
    source Ogre3DBeginnerGuideShaders.cg
    entry_point MyVertexShader1
    profiles vs_1_1 arbvp1

    default_params
    {
        param_named_auto worldViewMatrix worldviewproj_matrix
    }
}

fragment_program HeightBasedFragmentShader cg
{
    source Ogre3DBeginnerGuideShaders.cg
    entry_point HeightBasedFragmentShader
    profiles ps_1_1 arbfp1
}

vertex_program HeightBasedVertexShader cg
{
    source Ogre3DBeginnerGuideShaders.cg
    entry_point HeightBasedVertexShader
    profiles vs_1_1 arbvp1

    default_params
    {
        param_named_auto worldViewMatrix worldviewproj_matrix
    }
}

material Study/HeightBasedMaterial {
    technique {
        pass {
            fragment_program_ref HeightBasedFragmentShader {}
            vertex_program_ref HeightBasedVertexShader {}
        }
    }
}

material Study/test1 {
    technique {
        pass {

            fragment_program_ref MyFragmentShader1 {}
            vertex_program_ref MyVertexShader1 {}

			texture_unit 1
			{
				texture blending_map.png
				tex_address_mode mirror
			}

			texture_unit 2
			{
				texture tusk.jpg
				tex_address_mode mirror
			}

			texture_unit 3
			{
				texture GreenSkin.jpg
				tex_address_mode mirror
			}

        }
    }
}
